{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2016",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "types": ["vite/client", "vite-plugin-pages/client", "jest"],
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "allowJs": true,
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "auto-imports.d.ts",
    "shims.d.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
